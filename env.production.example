# CBMS Production Environment Configuration
# Copy this file to .env.production and update the values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password
MONGO_URI=mongodb://admin:your_secure_mongodb_password@mongodb:27017/cbms?authSource=admin

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_for_production
JWT_EXPIRE=7d

# Server Configuration
NODE_ENV=production
PORT=5000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_production_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=CBMS System

# SendGrid Dynamic Templates
SENDGRID_WELCOME_TEMPLATE_ID=d-welcome-template-id
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-password-reset-template-id
SENDGRID_EXPENDITURE_SUBMISSION_TEMPLATE_ID=d-expenditure-submission-template-id
SENDGRID_EXPENDITURE_APPROVAL_TEMPLATE_ID=d-approval-template-id
SENDGRID_EXPENDITURE_REJECTION_TEMPLATE_ID=d-rejection-template-id
SENDGRID_BUDGET_WARNING_TEMPLATE_ID=d-budget-warning-template-id

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=cbms-attachments-prod

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_secure_session_secret

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=logs/cbms.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Client Configuration
REACT_APP_API_URL=https://api.yourdomain.com/api
REACT_APP_APP_NAME=CBMS
REACT_APP_VERSION=1.0.0
REACT_APP_NODE_ENV=production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_MOCK_DATA=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
REACT_APP_SENTRY_DSN=your_sentry_dsn

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
